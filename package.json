{
  "name": "lilypad",
  "version": "1.0.0-alpha.0",
  "private": true,
  "type": "module",
  "scripts": {
    "db:start": "docker compose -f docker/compose.yml up -d",
    "db:stop": "docker compose -f docker/compose.yml down",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "dev": "vite --port 3000",
    "start": "vite --port 3000",
    "build:staging": "CLOUDFLARE_ENV=staging vite build && tsc",
    "build": "CLOUDFLARE_ENV=production vite build && tsc",
    "preview": "bun run build && vite preview",
    "deploy:staging": "bun run build:staging && wrangler deploy",
    "deploy": "bun run build && wrangler deploy",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:python-sdk": "cd sdks/python && uv run pytest",
    "test:python-sdk:coverage": "cd sdks/python && uv run pytest --cov --cov-config=.coveragerc --cov-report=term-missing",
    "test:python-sdk:watch": "cd sdks/python && uv run pytest-watch",
    "test:ci": "bun run test:coverage && bun run test:python-sdk",
    "codespell": "uvx codespell --skip node_modules,bun.lock,dist,coverage,**/cassettes/**,htmlcov",
    "typecheck": "bun x tsc --build ./tsconfig.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:python-sdk": "cd sdks/python && uv run ruff format .",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "lint": "bun run typecheck; bun run lint:eslint; bun run format:check",
    "lint:python-sdk": "cd sdks/python && uv run ruff format --check . && uv run ruff check . && uv run pyright",
    "lint:python-sdk:fix": "cd sdks/python && uv run ruff check --fix .",
    "lint:ci": "bun run codespell; bun run lint; bun run lint:python-sdk",
    "fix": "bun run format; bun run lint:eslint:fix",
    "fix:python-sdk": "cd sdks/python && uv run ruff check --fix . && uv run ruff format .",
    "sdk:extract-openapi": "curl -s http://localhost:3000/openapi.json | npx prettier --parser json > sdks/fern/openapi.json",
    "sdk:generate": "cd sdks/fern && npx fern generate --group python-sdk --local --force && bun run fix:python-sdk",
    "sdk:validate": "bun run sdk:extract-openapi && git diff --exit-code sdks/fern/openapi.json",
    "sdk:generate-all": "bun run sdk:extract-openapi && bun run sdk:generate",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "0.19.10",
    "@neondatabase/serverless": "^1.0.1",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.81.5",
    "@tanstack/react-router": "^1.121.2",
    "@tanstack/react-router-devtools": "^1.121.2",
    "@tanstack/router-plugin": "^1.121.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.3",
    "hono": "^4.8.4",
    "lucide-react": "^0.525.0",
    "postgres": "^3.4.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.9.0",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/bun": "latest",
    "@types/pg": "^8.15.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "fern-api": "^0.66.21",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.0",
    "prettier-plugin-organize-imports": "^4.2.0",
    "supabase": "^2.31.4",
    "typescript": "^5.7.2",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "web-vitals": "^4.2.4",
    "wrangler": "4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md,mdx}": [
      "bun run codespell",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "bun run scripts/lint-staged.ts"
    ],
    "sdks/python/**/*.py": [
      "cd sdks/python && uv run ruff check --fix",
      "cd sdks/python && uv run ruff format"
    ]
  }
}
