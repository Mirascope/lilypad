{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-examples",
    "rootDir": "./",
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["examples/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist", "dist-examples"]
}
